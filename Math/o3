def T_poly(n):
    x=sp.symbols('x')
    T=[1,x]
    for k in range(2,n+1):
        T.append(2*x*T[-1]-T[-2])
    return sp.expand(T[n])
T3=T_poly(3)
x,y=sp.symbols('x y')

Analyzed
from fractions import Fraction
def T(n,x):
    # compute T_n(x) using recurrence
    T0=Fraction(1)
    T1=x
    if n==0:
        return T0
    if n==1:
        return T1
    for k in range(2,n+1):
        Tn=2*x*T1 - T0
        T0,T1=T1,Tn
    return T1
p=lambda x: 2*T(19, Fraction(x,2))
